<!DOCTYPE html>
<html>
        <%- include('../partials/head.ejs') %>
        <link href="/css/registro.css", rel="stylesheet">
    
        
        
    </head>
    <body>
        <%- include('../partials/header.ejs') %>
        <main>
            <form action="/users/update/profile/password/<%= user.id %>?_method=PUT" method="post" class="form-registro" >
                <div class="form-control-registro">
                    <label for="current-password">Contraseña actual:</label>
                    <input type="password" name="currentPassword" id="current-password">
                    <i class="fa-solid fa-circle-check"></i>
                </div>
                <% if(locals.errorCurrentPassword) {%>
                    <p class= "errorCurrentPassword" style="color:red"> <%= errorCurrentPassword %> </p>
                <% } %>


                <div class="form-control-registro">
                    <label for="password">Nueva contraseña:</label>
                    <input type="password" name="password" id="password">
                    <i class="fa-solid fa-circle-xmark"></i>
                    <i class="fa-solid fa-circle-check"></i>
                    <p class="msg-error"></p>
                    <% if(locals.errors && errors.password){ %>
                        <p><%= errors.password.msg %></p>
                    <% } %>
                </div>
    
                <div class="form-control-registro">
                    <label for="confirm-password">Confirmar contraseña:</label>
                    <input type="password" name="confirm-password" id="confirm-password">
                    <i class="fa-solid fa-circle-xmark"></i>
                    <i class="fa-solid fa-circle-check"></i>
                    <p class="msg-error"></p>
                    <% if(locals.errors && errors.password){ %>
                        <p><%= errors.password.msg %></p>
                    <% } %>
                </div>

                <button type="reset" class="delete-button">BORRAR</button>
               
                <div class="form-final-registro">
                <button type="submit" class="create-account">MODIFICAR CONTRASEÑA</button>
                
                </div>
            </form>

        </main>
        <%- include('../partials/footer.ejs') %>
        <script src="/../../../js/validationPassword.js" ></script>
    </body>
    </html>
